{
  "manifest_version": 2,

  "name": "eyeWrtierCE",
  "description": "eyeWriter extension",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png"
  },
  "background": {
	"scripts": ["background.js"]
  },
  "web_accessible_resources": [
  "header.html",
  "mnu.html",
  "images/*",
  "style.css"
  ],
  "permissions": [
    "background",
	"tabs",
	"tts",
	"webRequest",
	"storage",
	"webRequestBlocking",
	"http://*/*",
	"https://*/*"
  ]
}
